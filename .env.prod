# ===================================
# CONNECT AITU - Environment Variables
# ===================================

# ---- Application ----
DEBUG=True
ENVIRONMENT=production
DOMAIN=connect-aitu.me
BACKEND_URL=https://connect-aitu.me/api

# CORS - MUST be JSON format
CORS_ORIGINS='["https://connect-aitu.me", "https://www.connect-aitu.me"]'
# ---- Database (PostgreSQL) ----
POSTGRES_HOST=connect-aitu-postgres
POSTGRES_PORT=5432
POSTGRES_USER=connect_user
POSTGRES_PASSWORD=ChangeThisStrongPassword123!
POSTGRES_DB=connect_aitu_db

# ---- Redis ----
REDIS_HOST=connect-aitu-redis
REDIS_PORT=6379

# ---- Celery (RabbitMQ) ----
RABBITMQ_HOST=connect-aitu-rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=connect_user
RABBITMQ_PASSWORD=ChangeThisRabbitMQPassword123!

# ---- Security ----
SECRET_KEY=your_very_long_secret_key_here_change_this_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ---- Admin ----
FIRST_ADMIN_USERNAME=admin
FIRST_ADMIN_PASSWORD=ChangeThisAdminPassword123!
FIRST_ADMIN_FULLNAME=Администратор
